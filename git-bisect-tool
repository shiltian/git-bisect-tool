#!/usr/bin/env python3
"""
Git Bisect Tool - Runner script.

This script allows running the tool without installation:
    ./git-bisect-tool --help

Or with Python explicitly:
    python3 git-bisect-tool --help
"""

import sys
from pathlib import Path

# Add the project directory to the path
project_dir = Path(__file__).parent
sys.path.insert(0, str(project_dir))

from git_bisect_tool.cli import main

if __name__ == "__main__":
    sys.exit(main())

